					"response": []
				},
				{
					"name": "Get User Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/users/profile/{{username}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"users",
								"profile",
								"{{username}}"
							]
						},
						"description": "Get user profile by username (protected route)"
					},
					"response": []
				}
			],
			"description": "User authentication endpoints including registration, login, and profile retrieval"
